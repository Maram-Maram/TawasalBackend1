@* @page *@
@model TawasalBackend1.Pages.Admin.Courses.IndexModel

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<form method="get">
    <div class="form-group">
        <label for="search">Search Courses:</label>
        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Enter course title or description" />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </div>
</form>

@if (Model.Courses == null || Model.Courses.Count == 0)
{
    <p>No courses found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Price</th>
                <th>Teacher ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Duration hours</td>
                    <td>@course.Price $</td>
                    <td>@course.TeacherId</td>
                </tr>
            }
        </tbody>
    </table>
}
